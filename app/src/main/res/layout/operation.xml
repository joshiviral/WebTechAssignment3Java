<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Wellcome User"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:id="@+id/addFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:text="AddFiles"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:id="@+id/vFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewFiles"
        android:layout_alignBaseline="@+id/addFile"
        android:layout_alignBottom="@+id/addFile"
        android:layout_toEndOf="@+id/addFile"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeleteFiles"
        android:layout_marginEnd="19dp"
        android:layout_alignBaseline="@+id/vFile"
        android:layout_alignBottom="@+id/vFile"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vFile"
        android:layout_below="@+id/vFile"
        android:layout_marginTop="88dp"
       />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="25dp"
        android:text="TextView" />
</RelativeLayout>
